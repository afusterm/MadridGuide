<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/activity_activity_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="io.keepcoding.madridguide.activities.ActivityDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/activity_activity_detail_activity_name_text"
            tools:text="El corte inglés"
            android:gravity="center"
            android:textSize="@dimen/activity_shop_detail_shop_name_text_size"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/activity_activity_detail_activity_logo_image"
            android:layout_toEndOf="@+id/activity_activity_detail_activity_logo_image"/>

        <ImageView
            android:id="@+id/activity_activity_detail_activity_logo_image"
            tools:src="@drawable/entity_detail_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_activity_detail_activity_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_shop_detail_text_margin_left"
        android:layout_marginStart="@dimen/activity_shop_detail_text_margin_left"
        android:layout_marginRight="@dimen/activity_shop_detail_text_margin_right"
        android:layout_marginEnd="@dimen/activity_shop_detail_text_margin_right"
        android:layout_marginTop="@dimen/activity_shop_detail_text_margin_top"
        tools:text="El Grupo El Corte Inglés es la mayor cadena de grandes almacenes en Europa\r\ny una de las mayores compañías de distribución a nivel internacional. Su\r\nestrategia de diversificación y su empeño por adaptarse a las nuevas\r\nnecesidades y demandas del cliente, le ha llevado a crear nuevos formatos\r\ncomerciales como Hipercor, Supercor, Opencor, Bricor, Sfera, Informática El Corte Inglés, Óptica 2000, La Tienda en Casa y Primeriti, entre otros.\r\nSiguiendo esta línea de trabajo nos situamos al lado de los usuarios en las Redes Sociales. "/>

    <TextView
        android:id="@+id/activity_activity_detail_activity_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_shop_detail_text_margin_left"
        android:layout_marginStart="@dimen/activity_shop_detail_text_margin_left"
        android:layout_marginRight="@dimen/activity_shop_detail_text_margin_right"
        android:layout_marginEnd="@dimen/activity_shop_detail_text_margin_right"
        android:layout_marginTop="@dimen/activity_shop_detail_text_margin_top"
        tools:text="Raimundo Fernández Villaverde, 65"/>

    <ImageView
        android:id="@+id/activity_activity_detail_image_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_shop_detail_map_margin_top"
        tools:src="@drawable/shop_detail_static_map"
        android:scaleType="centerCrop"/>
    </LinearLayout>
</ScrollView>